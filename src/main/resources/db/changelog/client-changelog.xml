        <preConditions onFail="MARK_RAN">
            <not>
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*)
                    FROM client
                    WHERE client_code IS NULL;
                </sqlCheck>
            </not>
        </preConditions>
        <sql>
            UPDATE client
            SET client_code = (SELECT UUID())
            WHERE client_code IS NULL;
        </sql>
        <sql>UPDATE client
             SET client_code = UPPER(REPLACE(CONCAT('C', client_code), '-', ''))
