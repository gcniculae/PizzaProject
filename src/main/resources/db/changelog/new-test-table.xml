<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="1" author="George Niculae">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="pizza_project" catalogName="pizza_project" tableName="test_table"/>
            </not>
        </preConditions>
        <createTable tableName="test_table">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="test_column" type="varchar(20)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="George Niculae">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM test_table;
            </sqlCheck>
        </preConditions>
        <insert tableName="test_table">
            <column name="test_column" value="test value 1"/>
        </insert>
        <insert tableName="test_table">
            <column name="test_column" value="test value 2"/>
        </insert>
        <insert tableName="test_table">
            <column name="test_column" value="test value 3"/>
        </insert>
    </changeSet>
</databaseChangeLog>
